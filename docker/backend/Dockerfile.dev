FROM python:3.11

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        libpq-dev \
        postgresql-client \
        netcat-traditional \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt /app/
RUN pip install --upgrade pip \
    && pip install -r requirements.txt \
    && pip install pytest pytest-django ipython

# Set up a non-root user for better security
RUN groupadd -r django \
    && useradd -r -g django django \
    && chown -R django:django /app

# We keep using root for development to avoid permission issues
# USER django

# Include a script for database check
COPY docker/backend/wait-for-db.sh /usr/local/bin/wait-for-db.sh
RUN chmod +x /usr/local/bin/wait-for-db.sh

# Copy project files
COPY . /app/

# Expose port
EXPOSE 8000

# Set entrypoint for development
ENTRYPOINT ["/app/docker/backend/entrypoint.sh"]

# Run server
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"] 