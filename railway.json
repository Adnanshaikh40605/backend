{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildCommand": "chmod +x start_django.sh"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "./start_django.sh",
    "healthcheck": {
      "path": "/health",
      "interval": 10,
      "timeout": 5,
      "startPeriod": 120,
      "retries": 10
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 